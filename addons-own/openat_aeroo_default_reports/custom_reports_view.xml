<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_picking_out_openat_inherit_form" model="ir.ui.view">
            <field name="name">stock.picking.out.form.inherit.openat</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="delivery.view_delivery_order_inherit_stock"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header//button[@name='%(delivery.report_shipping)d' and @states='confirmed,assigned']" position="attributes">
                    <attribute name="name">%(action_report_delivery_order_openat)d</attribute>
                </xpath>
                <xpath expr="/form/header//button[@name='%(delivery.report_shipping)d' and @states='done']" position="attributes">
                    <attribute name="name">%(action_report_delivery_order_openat)d</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
